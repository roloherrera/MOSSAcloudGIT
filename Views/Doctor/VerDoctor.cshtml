@model IEnumerable<G7.Models.DoctorObj>

@{
    ViewBag.Title = "VerDoctor";
}

<div class="container-fluid py-3">
    <h2 class="pb-3">Ver Doctores</h2>

    <div class="row pb-3">
        <div class="col-md-12">
            @Html.ActionLink("Crear Nuevo Doctor", "CrearDoctor", "Doctor", null, new { @class = "btn btn-dark" })
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Id Doctor</th>
                        <th>Id Usuario</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.IdDoctor)</td>
                            <td>@Html.DisplayFor(modelItem => item.IdUsuario)</td>
                            <td>
                                @Html.ActionLink("Editar", "EditarDoctor", "Doctor", new { id = item.IdDoctor }, new { @class = "btn btn-secondary" })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>